#!/bin/bash

# Define color codes
BLACK='\e[0;30m'
RED='\e[0;31m'
GREEN='\e[0;32m'
YELLOW='\e[0;33m'
BLUE='\e[0;34m'
PURPLE='\e[0;35m'
CYAN='\e[0;36m'
WHITE='\e[0;37m'
NC='\e[0m'  # No color

# Print colored text
echo -e "${BLACK}Black Text${NC}"
echo -e "${RED}Red Text${NC}"
echo -e "${GREEN}Green Text${NC}"
echo -e "${YELLOW}Yellow Text${NC}"
echo -e "${BLUE}Blue Text${NC}"
echo -e "${PURPLE}Purple Text${NC}"
echo -e "${CYAN}Cyan Text${NC}"
echo -e "${WHITE}White Text${NC}"
